# Kafka Bootstrap Servers (comma-separated list of host:port)
BOOTSTRAP_SERVERS=localhost:9092

# Kafka topic where product data will be sent
OUTPUT_TOPIC=products_producer

# Kafka Security Protocol (e.g., PLAINTEXT, SASL_PLAINTEXT, SASL_SSL, SSL)
# Default to PLAINTEXT for local development
SECURITY_PROTOCOL=PLAINTEXT

# SASL Mechanism (e.g., PLAIN, SCRAM-SHA-256, SCRAM-SHA-512)
# Only required if SECURITY_PROTOCOL is SASL_PLAINTEXT or SASL_SSL
# SASL_MECHANISM=PLAIN

# SASL Username (if using SASL authentication)
# SASL_PLAIN_USERNAME=user

# SASL Password (if using SASL authentication)
# SASL_PLAIN_PASSWORD=password